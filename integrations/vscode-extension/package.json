{
  "name": "mico-css-intellisense",
  "displayName": "MicoCSS IntelliSense",
  "description": "Intelligent autocompletion for MicoCSS utility classes and variables.",
  "version": "1.0.0",
  "publisher": "micodev",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:html", "onLanguage:javascript", "onLanguage:typescript"],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      { "id": "html", "aliases": ["HTML"], "extensions": [".html", ".htm"] },
      { "id": "javascript", "aliases": ["JavaScript"], "extensions": [".js"] },
      { "id": "typescript", "aliases": ["TypeScript"], "extensions": [".ts"] }
    ]
  }
}
